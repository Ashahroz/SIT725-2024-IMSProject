    <script>
        // Function to show alert messages
        function showAlert(type, message) {
            var alertContainer = document.getElementById('alertContainer');
            var alertMessage = document.getElementById('alertMessage');
            alertContainer.className = 'alert alert-' + type;
            alertMessage.innerHTML = message;
            alertContainer.classList.remove('d-none');
        }

        // Validate form data
        function validateFormData(data) {
            if (!data.item_id.trim()) {
                showAlert('danger', 'Item ID is required.');
                return false;
            }
            if (!data.customer_name.trim()) {
                showAlert('danger', 'Customer name is required.');
                return false;
            }
            if (!data.category.trim()) {
                showAlert('danger', 'Category is required.');
                return false;
            }
            if (!data.brand.trim()) {
                showAlert('danger', 'Brand is required.');
                return false;
            }
            if (!data.size.trim()) {
                showAlert('danger', 'Size is required.');
                return false;
            }
            if (!data.total_amount || data.total_amount <= 0) {
                showAlert('danger', 'Amount must be a positive number.');
                return false;
            }
            if (!data.phone_number.trim()) {
                showAlert('danger', 'Phone number is required.');
                return false;
            }
            return true;
        }

        // API Call to add the order detail when clicked on button
        function addData(jsonData) {
            $.ajax({
                url: '/adddata',
                data: JSON.stringify(jsonData),
                processData: false,
                contentType: "application/json; charset=UTF-8",
                type: 'POST',
                success: (result) => {
                    showAlert('success', 'Stock added successfully');
                },
                error: (xhr, status, error) => {
                    showAlert('danger', 'Error: ' + xhr.responseText);
                }
            });
        }

        function submitForm() {
            var data = {
                "item_id": document.getElementById("itemid1").value,
                "customer_name": document.getElementById("customername").value,
                "category": document.getElementById("category1").value,
                "brand": document.getElementById("brand1").value,
                "size": document.getElementById("size1").value,
                "total_amount": document.getElementById("amount1").value,
                "phone_number": document.getElementById("phone_number").value
            };

            if (validateFormData(data)) {
                addData(data);
            }
        }

        var submit_button = document.getElementById("submit_button");
        submit_button.onclick = function () {
            submitForm();
        };
    </script>

